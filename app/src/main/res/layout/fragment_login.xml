<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_fragment_backround"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backround" />

        <ImageView
            android:id="@+id/login_fragment_logo"
            android:layout_width="227dp"
            android:layout_height="211dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logoapp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_fragment_usernameedit"
            android:layout_width="303dp"
            android:layout_height="78dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="50dp"
            android:hint="ID-Number"
            app:hintTextColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_logo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_fragment_textinput"
                android:layout_width="261dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="#F7FBF7"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/login_fragment_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#F5F8F5"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/login_fragment_usernameedit"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/login_fragment_usernameedit"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_usernameedit" />

        <Button
            android:id="@+id/login_fragment_registry_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#09AE24"
            android:fontFamily="casual"
            android:text="registry"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/login_fragment_button"
            app:layout_constraintStart_toStartOf="@+id/login_fragment_button"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_button" />

        <Button
            android:id="@+id/login_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:backgroundTint="#09AE24"
            android:fontFamily="casual"
            android:text="LogIn"
            android:textColor="#000000"
            app:iconTint="#020202"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>